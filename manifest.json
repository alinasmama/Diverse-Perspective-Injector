{
  "manifest_version": 3,
  "name": "Diverse Perspective Injector",
  "version": "1.0",
  "description": "Injects underrepresented perspectives into AI or search results.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
